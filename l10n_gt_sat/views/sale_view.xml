<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">view.order.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="replace">
                <field name="price_unit" readonly="1" />
            </xpath>
        </field>
    </record>

    <record id="view_order_form_access_inherit" model="ir.ui.view">
        <field name="name">view.order.access.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4, ref('l10n_gt_sat.group_cambio_de_precios'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="replace">
                <field name="price_unit" readonly="0" />
            </xpath>
        </field>
    </record>
  </data>
</odoo>
