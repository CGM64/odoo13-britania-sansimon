<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

      <delete model="ir.property"
        search="[('id','=',ref('stock_account.default_category_cost_method'))]"/>

        <delete model="ir.property"
          search="[('id','=',ref('stock_account.default_category_valuation'))]"/>



        <record forcecreate="True" id="default_category_cost_method" model="ir.property">
            <field name="name">Cost Method Property</field>
            <field name="fields_id" ref="stock_account.field_product_category__property_cost_method"/>
            <field name="value">average</field>
            <field name="type">selection</field>
        </record>
        <record forcecreate="True" id="default_category_valuation" model="ir.property">
            <field name="name">Valuation Property</field>
            <field name="fields_id" ref="stock_account.field_product_category__property_valuation"/>
            <field name="value">real_time</field>
            <field name="type">selection</field>
        </record>

        <record forcecreate="True" id="default_company_id" model="ir.property">
            <field name="name">Default Company</field>
            <field name="fields_id" ref="product.field_product_template__company_id"/>
            <field name="value_reference">res.company,2</field>
            <field name="type">many2one</field>
        </record>
    </data>
</odoo>
