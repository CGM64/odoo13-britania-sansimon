  <template id="voucher_1">
      <div>
          <t t-if="page['state'] == 'cancelled'">
              <div class="o-watermark">CANCELADO</div>
          </t>
          <table class="artml_table" style="width:100%;">
            <tr style="height:50px;">
              <td style="width:15%;"><![CDATA[&nbsp;]]></td>
              <td style="width:5%;"></td>
              <td style="width:20%"></td>
              <td style="width:20%"></td>
              <td style="width:20%"></td>
              <td style="width:20%"></td>
            </tr>
            <tr>
              <td></td>
              <td colspan="4"><![CDATA[&nbsp;]]></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td colspan="4"><span t-esc="o.name"/></td>
              <td></td>
            </tr>
            <t t-if="o.move_line_ids">
              <tr t-foreach="o.move_line_ids" t-as="l">
                <td><span t-field="l.account_id.code"/></td>
                <td colspan="4"><span t-field="l.account_id.name"/></td>
                <td class="text-right">
                  <t t-if="l.debit">
                    <span t-esc="'{0:,.2f}'.format(l.debit)"/>
                  </t>
                  <t t-else="else">
                    <span t-esc="'{0:,.2f}'.format(l.credit)"/>
                  </t>
                </td>
              </tr>
              <tr>
                <td></td>
                <td class="text-right" colspan="4">Total de la partida ==></td>
                <td class="text-right"><span t-esc="'{0:,.2f}'.format(o.move_line_ids[0].move_id.amount_total)"/></td>
              </tr>
            </t>
            <tr>
              <td colspan="2"></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
          </table>
          <div t-attf-class="footer">
            <table class="artml_table" style="width:100%;">
              <tr>
                <td style="width:15%;"><p/></td>
                <td style="width:5%;"></td>
                <td style="width:20%"></td>
                <td style="width:20%"></td>
                <td style="width:20%"></td>
                <td style="width:20%"></td>
              </tr>
              <tr>
                <td colspan="2"><span t-esc="o.create_uid.name"/></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-right"><span class="m-0" t-esc="page['payment_date']"/></td>
              </tr>
            </table>

          </div>
      </div>
  </template>

