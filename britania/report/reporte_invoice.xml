<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <template id="invoice_fel">
      <t t-call="web.basic_layout">

        <div class="header">
          <link rel="stylesheet" href="/britania/static/src/css/report.css"/>
          <div class="container">
            <div class="row fac_t_letra">
              <div class="col-4 text-center"><img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" class="factura_logo"/></div>
              <div class="col-4 text-center">
                <h5><span t-field="o.company_id.name"/></h5>
                <t t-if="o.fel_setting_id"><br/><span t-esc="o.fel_setting_id.nombre_comercial.upper()"/></t>
                <t t-if="o.company_id.company_registry"><br/><span t-esc="o.company_id.company_registry.upper()"/></t>
                <small>
                  <span t-field="o.company_id.display_street"/>
                </small>
                <t t-if="o.company_id.phone">
                <small><br/>PBX:
                  <span t-field="o.company_id.phone"/></small></t>
                <t t-if="o.company_id.fax">
                  <small>
                    - FAX:
                    <span t-field="o.company_id.fax"/></small>
                </t>
                <small><br/><span t-field="o.company_id.email"/></small>
                <small><br/>NIT:
                  <span t-field="o.company_id.vat"/></small>
              </div>
              <div class="col-4">
                <t t-if="not o.numero_acceso or (o.fel_firma and o.numero_acceso)">
                <div>
                  <div class="col-12 text-center m-1">DOCUMENTO TRIBUTARIO ELECTRONICO</div>
                  <div class="col-12 text-center m-1"><t t-esc="o.journal_id.get_tipo_dte_info(o.journal_id.tipo_documento)"/>
                    ELECTRÓNICA</div>
                  <div class="col-12 m-1">
                    <div class="row">
                      <div class="col-7 p-0 m-0">
                        <strong>SERIE DE DOCUMENTO:</strong>
                      </div>
                      <div class="col-5">
                        <span t-field="o.fac_serie"/>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-7 p-0 m-0">
                        <strong>No. DE DTE:</strong>
                      </div>
                      <div class="col-5">
                        <span class="factura_dte_numero" t-field="o.fac_numero"/>
                      </div>
                    </div>
                  </div>
                </div>
              </t>
              <t t-if="o.numero_acceso and not o.fel_firma">
                <div>
                  <div class="col-12 text-center m-1">DOCUMENTO EN CONTINGENCIA</div>
                  <div class="col-12 text-center m-1"><t t-esc="o.journal_id.get_tipo_dte_info(o.journal_id.tipo_documento)"/>
                  </div>
                  <div class="col-12 text-center m-1">NUMERO DE ACCESO</div>
                  <div class="col-12 text-center m-1"><span t-field="o.numero_acceso"/></div>
                    <div class="row">
                      <div class="col-7 p-0 m-0">
                        <strong></strong>
                      </div>
                      <div class="col-5">

                      </div>
                    </div>
                  </div>

              </t>
              </div>
            </div>
            <div class="row fac_t_letra_peq">
              No Interno:&#160;&#160;&#160;&#160;<span t-field="o.name"/>
              <t t-if="o.journal_id.tipo_documento in ('NABN','NCRE')">
                , Aplica Doc. Interno:
                <span t-field="o.reversed_entry_id.name"/>
              </t>
              <t t-if="o.journal_id.tipo_documento in ('NDEB')">
                , Aplica Doc. Interno:
                <span t-field="o.fel_factura_referencia_id.name"/>
              </t>
            </div>
          </div>
          <div class="factura_contendedor fac_t_letra fac_t_letra_verde">
            <div class="row">
              <div class="col-6">
                <p>
                  <b>CLIENTE:</b>&#160;<span t-field="o.partner_id.name"/></p>
              </div>
              <div class="col-2">
                <p>
                  <b>NIT:</b>&#160;<span t-field="o.partner_id.vat"/></p>
              </div>
              <div class="col-4">
                <p>
                  <b>FECHA:</b>&#160;<span t-field="o.invoice_date"/></p>
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <p>
                  <b>DIRECCION:</b>&#160;<span t-field="o.partner_id.display_street"/></p>
              </div>
              <div class="col-4">
                <p>
                  <b>CONDICION:</b>&#160;<span t-field="o.invoice_payment_term_id.name"/></p>
              </div>
            </div>
            <div class="row">
              <div class="col-8">
                <p>
                  <b>TELEFONO:</b>&#160;<span t-field="o.partner_id.phone"/></p>
              </div>
              <div class="col-4">
                <p>
                  <b>VENDEDOR:</b>&#160;<span t-field="o.invoice_user_id.name"/></p>
              </div>
            </div>
          </div>

          <div class="factura_contendedor_verde fac_t_letra">
            <div class="row">
              <div class="col-1">
                <p>CODIGO</p>
              </div>
              <div class="col-1">
                <p>CANT.</p>
              </div>
              <div class="col-7">
                <p>DESCRIPCION</p>
              </div>
              <div class="col-1">
                <p>P. UNI.</p>
              </div>
              <div class="col-1">
                <p>TOTAL</p>
              </div>
            </div>
          </div>

        </div>
        <div class="page">
          <t t-if="o.state == 'cancel'">
                      <div style="position:absolute;opacity:0.25;z-index:1000;transform:rotate(300deg);-webkit-transform:rotate(300deg);width:80%;height:400px;">
                        <p style="font-size:70px; color:red; padding-top: 200px;">ANULADO</p>
                      </div>
                    </t>
                    <t t-if="o.state == 'draft'">
                      <div style="position:absolute;opacity:0.25;z-index:1000;transform:rotate(300deg);-webkit-transform:rotate(300deg);width:80%;height:410px;">
                        <p style="font-size:70px; color:grey; padding-top: 200px;">BORRADOR</p>
                      </div>
                    </t>
          <link rel="stylesheet" href="/britania/static/src/css/report.css"/>
          <table class="factura_tabla factura_ancho fac_t_letra">
            <thead>
              <t t-foreach="range(9)" t-as="item">
              <tr>
                <th width="7%">&#160;</th>
                <th width="3%"></th>
                <th width="4%"></th>
                <th width="5%"></th>
                <th width="20%"></th>
                <th width="20%"></th>
                <th width="14%"></th>
                <th width="2%"></th>
                <th width="10%"></th>
                <th width="15%"></th>
              </tr>
            </t>
            </thead>
            <tbody>
              <t t-foreach="o.invoice_line_ids" t-as="l">
                <tr>
                  <td><span t-esc="l.product_id.default_code"/></td>
                  <td colspan="2" class="text-center"><span t-esc="l.quantity"/></td>
                  <td colspan="4"><t t-esc="l.name"/></td>
                  <td colspan="2" class="factura_td_numeros"><span t-esc="o.currency_id.symbol"/>&#160;<span t-esc="'{0:,.2f}'.format(l.price_unit)"/></td>
                  <td class="factura_td_numeros"><span t-esc="o.currency_id.symbol"/>&#160;<span t-esc="'{0:,.2f}'.format(l.price_total)"/></td>
                </tr>
              </t>
            </tbody>
          </table>

        </div>
        <div class="footer">
          <link rel="stylesheet" href="/britania/static/src/css/report.css"/>
          <table class="factura_tabla factura_ancho fac_t_letra">
            <tr>
              <th width="7%"></th>
              <th width="3%"></th>
              <th width="4%"></th>
              <th width="5%"></th>
              <th width="20%"></th>
              <th width="20%"></th>
              <th width="14%"></th>
              <th width="2%"></th>
              <th width="10%"></th>
              <th width="15%"></th>
            </tr>
            <tr>
              <td colspan="7" class="factura_encabezado1">TOTAL A PAGAR EN LETRAS<br/><t t-esc="o.monto_letras(o.amount_total)"/></td>
              <td colspan="2" class="text-center">TOTAL</td>
              <td class="factura_td_numeros"><span t-esc="o.currency_id.symbol"/>&#160;<span t-esc="'{0:,.2f}'.format(o.amount_total)"/></td>
            </tr>
          </table>
          <div class="row fac_t_letra">
            <div class="col-4">USUARIO:
              <span t-field="o.user_id.name"/></div>
            <div class="col-4">
              <t t-if="o.journal_id.fel_frases_ids">
                <t t-foreach="o.journal_id.fel_frases_ids" t-as="frase">
                  <t t-esc="frase.fel_escenario.texto.upper()"/><br/>
                </t>
              </t>
              NO SE ACEPTAN DEVOLUCIONES
            </div>
            <div class="col-4">PESO:</div>
          </div>
          <t t-if="o.journal_id.tipo_documento in ('NDEB','NCRE')">
          <t t-set="informacion" t-value="o.get_info_document()"/>
          <div class="row fac_t_letra">
            <div class="col-4">Fecha emision doc origen:</div>
            <div class="col-8">&#160;&#160;&#160;<t t-esc="informacion['fecha_emision']"/></div>
          </div>
          <div class="row fac_t_letra">
            <div class="col-4">Numero autorizacion doc origen:</div>
            <div class="col-8">&#160;&#160;&#160;<t t-esc="informacion['numero_autorizacion']"/></div>
          </div>
          <div class="row fac_t_letra">
            <div class="col-4">Motivo Ajuste:</div>
            <div class="col-8">&#160;&#160;&#160;<t t-esc="informacion['motivo']"/></div>
          </div>
        </t>
          <div t-attf-class="row fac_t_letra_peq text-justify p-3 {{ 'fac_t_letra_blanca' if o.journal_id.tipo_documento != 'FCAM' else '' }}">
            <b>Por medio de esta única Factura Cambiaria girada libre de protesto se servirá pagar a la orden o endoso de <span t-field='o.company_id.name'/> el valor total o por el último saldo insoluto condiciones que se establecen en el presente título y que se tendrán expresamente aceptadas con la firma de la presente factura en concepto de mercancía que acepta haber </b><br/><br/>

            Condiciones de crédito: se cobrará Q 150.00 por cheque rechazado y/o retenido.  Esta factura no se considera cancelada si no se acompaña el recibo de caja correspondiente.   La firma de cualquier empleado o dependiente del comprador al aceptar esta factura, obligará a este a cumplir con todas las condiciones estipuladas en la misma. El comprador declara:  A) Haber recibido la mercadería a su entera satisfación.   B) Da como bueno el total que se indica en esta factura cambiaria girada libre de protesto.   C) Acepta pagar al vendedor intereses moratorios a razón del 2% variable mensual por e``````` tiempo que acuse el pago extemporáneo de este documento a partir de su vencimiento.   E) Que de no cumplir con la obligación de pago a su vencimiento, el tenedor podrá ejecutar este título de
            crédito para lo cual el comprador renuncia al fuero de su domicilio y se somete a los tribunales de este departamento, reconociéndose llano deudor de las costas a juicio si llegaren.   F) Que estando de acuerdo con todas y cada uno de los puntos que contiene este documento los ratifica al firmar la aceptación.    <t t-esc="o.company_id.name"/> se reserva el derecho a negociar este documento tal como lo establece la ley vigente.

          </div>
          <div class="row fac_t_letra_peq p-2">
            <div class="col-4 text-center">____________________________________________________________________<br/>RECIBI CONFORME/NOMBRE</div>
            <div class="col-2">
              <t t-if="o.journal_id.tipo_documento == 'FCAM'">NUMERO DE ABONO:<br/>MONTO DE ABONO:</t>
            </div>
            <div class="col-2 text-right">
              <t t-if="o.journal_id.tipo_documento == 'FCAM'">1<br/><span t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></t>
            </div>
            <div class="col-4 text-center">____________________________________________________________________<br/>ENTREGUE CONFORME/NOMBRE</div>

          </div>
          <t t-if="o.fel_firma">
          <div class="row fac_t_letra_peq factura_linea">
            <div class="col-6">Autorizacion:<t t-esc="o.fel_firma"/></div>
            <div class="col-6">Fecha de Certificación:<t t-esc="o.fecha_certificacion"/></div>
          </div>
          <div class="row fac_t_letra_peq">
            <div class="col-6">
              <t t-if="o.journal_id.tipo_documento == 'FCAM'">
                LUGAR DE ENTREGA:
                <t t-if="o.partner_shipping_id">
                  <span t-field="o.partner_shipping_id.street"/>
                </t>
                <t t-if="not o.partner_shipping_id">
                  <span t-field="o.partner_id.street"/>
                </t><br/>
                TIEMPO DE ENTREGA:&#160;<br/>
                CON ATENCION A:&#160;
              </t>

            </div>
            <div class="col-3">
              Datos del certificador<br/>
              NIT:<t t-esc="o.fel_setting_id.proveedor_id.vat"/><br/>
              Nombre:<t t-esc="o.fel_setting_id.proveedor_id.name"/>
            </div>
            <div class="col-3"><img src="/britania/static/description/FEL.PNG" style="max-height:70px;padding-top: 4px;"/></div>
          </div>
        </t>
        <t t-if="o.numero_acceso and not o.fel_firma">
          <div class="row">
            <div class="col-12" style="text-align:center;">
              Emisión en contingencia, obtenga su DTE certificado en el sitio web:
              <br/>www.sat.gob.gt/fe
            </div>
          </div>
        </t>

        </div>
      </t>
    </template>

    <template id="britania.invoice_britania">
      <t t-call="web.basic_layout">

        <div class="header">
          <link rel="stylesheet" href="/britania/static/src/css/report.css"/>
          <div class="container">
            <div class="row fac_t_letra">
              <div class="col-4 text-center"><img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)" class="factura_logo"/></div>
              <div class="col-4 text-center">
                <h5><span t-field="o.company_id.name"/></h5>
                <t t-if="o.fel_setting_id"><span t-esc="o.fel_setting_id.nombre_comercial.upper()"/></t>
                <t t-if="o.company_id.company_registry"><br/><span t-esc="o.company_id.company_registry.upper()"/></t>
                <small>
                  <br/><span t-field="o.company_id.display_street"/>
                  <br/>
                  <span t-field="o.company_id.city"/>,
                  <span t-field="o.company_id.state_id.name"/>
                </small>
                <t t-if="o.company_id.phone">
                <small><br/>PBX:
                  <span t-field="o.company_id.phone"/></small></t>
                <t t-if="o.company_id.fax">
                  <small>
                    - FAX:
                    <span t-field="o.company_id.fax"/></small>
                </t>
                <small><br/><span t-field="o.company_id.email"/></small>
                <small><br/>NIT:
                  <span t-field="o.company_id.vat"/></small>
              </div>
              <div class="col-4">
                <div>
                  <div class="col-12 text-center m-1">DOCUMENTO TRIBUTARIO ELECTRONICO</div>
                  <div class="col-12 text-center m-1"><t t-esc="o.journal_id.get_tipo_dte_info(o.journal_id.tipo_documento)"/>
                    ELECTRÓNICA</div>
                  <div class="col-12 m-1">
                    <div class="row">
                      <div class="col-7 p-0 m-0">
                        <strong>SERIE DE DOCUMENTO:</strong>
                      </div>
                      <div class="col-5">
                        <span t-field="o.fac_serie"/>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-7 p-0 m-0">
                        <strong>No. DE DTE:</strong>
                      </div>
                      <div class="col-5">
                        <span class="factura_dte_numero" t-field="o.fac_numero"/>
                      </div>
                    </div>
                  </div>
                  <div t-attf-class="col12 fac_t_letra_peq text-justify m-1 {{ 'fac_t_letra_blanca' if o.journal_id.tipo_documento != 'FCAM' else '' }}">
                    POR MEDIO DE ESTA UNICA FACTURA CAMBIARIA ELECTRONICA SE SERVIRA USTED PAGAR A LA ORDEN O ENDOSO DE COMERCIALIZADORA LA LAMINA,S.A. LA SUMA QUE SE INDICA DE ACUERDO A LAS CONDICIONES QUE SE ESTABLECEN EN EL PRESENTE TITULO,EN EL QUE ACEPTA HABER
                    RECIBIDO A ENTERA SATISFACCION CONFORME EL DETALLE SIGUIENTE.
                  </div>

                </div>
              </div>
            </div>
            <div class="row fac_t_letra_peq">
              <div class="col-6">
              No Interno:&#160;&#160;&#160;&#160;<span t-field="o.name"/>
              <t t-if="o.journal_id.tipo_documento in ('NABN','NCRE')">
                , Aplica Doc. Interno:
                <span t-field="o.reversed_entry_id.name"/>
              </t>
              <t t-if="o.journal_id.tipo_documento in ('NDEB')">
                , Aplica Doc. Interno:
                <span t-field="o.fel_factura_referencia_id.name"/>
              </t>
            </div>
            <div class="col-6" style="text-align:right;">&#160;</div>
            </div>
          </div>
        </div>
        <div class="page">
          <link rel="stylesheet" href="/britania/static/src/css/report.css"/>
          <t t-foreach="o.detalle_factura()" t-as="pagina">
            <table class="factura_tabla factura_ancho fac_t_letra salto">
              <thead>
                <tr style="border:0px;">
                  <th style="border:0px;" width="13%"></th>
                  <th style="border:0px;" width="3%"></th>
                  <th style="border:0px;" width="4%"></th>
                  <th style="border:0px;" width="5%"></th>
                  <th style="border:0px;" width="16%"></th>
                  <th style="border:0px;" width="13%"></th>
                  <th style="border:0px;" width="14%"></th>
                  <th style="border:0px;" width="10%"></th>
                  <th style="border:0px;" width="5%"></th>
                  <th style="border:0px;" width="17%"></th>
                </tr>
                <tr style="border:0px;">
                  <th colspan="10" style="border:0px;">
                    <t t-if="o.state == 'cancel'">
                      <div style="position:absolute;opacity:0.25;z-index:1000;transform:rotate(300deg);-webkit-transform:rotate(300deg);width:100%;height:500px;">
                        <p style="font-size:70px; color:red; padding-top: 200px;">ANULADO</p>
                      </div>
                    </t>
                    <t t-if="o.state == 'draft'">
                      <div style="position:absolute;opacity:0.25;z-index:1000;transform:rotate(300deg);-webkit-transform:rotate(300deg);width:100%;height:510px;">
