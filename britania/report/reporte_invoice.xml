                    <t t-if="l['blanco']">
                      <td>&#160;</td>
                      <td>&#160;</td>
                      <td class="text-center">&#160;</td>
                      <td colspan="4">&#160;</td>
                      <td>&#160;</td>
                      <td>&#160;</td>
                      <td>&#160;</td>
                    </t>
                    <t t-else="">
                      <td><span t-esc="l['default_code']"/></td>
                      <td class="text-center"><span t-esc="l['quantity']"/></td>
                      <td class="text-center"><span t-esc="l['product_uom_name']"/></td>
                      <td colspan="4"><t t-esc="l['name']"/></td>
                      <td class="factura_td_numeros"><span t-esc="l['price_unit']"/></td>
                      <td class="text-center"><span t-esc="l['discount']"/></td>
                      <td class="factura_td_numeros"><span t-esc="l['price_total']"/></td>
                    </t>
                  </tr>
                </t>

              </tbody>
              <tfoot class="footer factura_pie_tabla">
                <tr>
                  <td colspan="8" class="factura_encabezado1"><br/></td>
                  <td class="text-center">SUBTOTAL</td>
                  <td class="factura_td_numeros"><span t-esc="o.amount_total_undiscounted" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></td>
                </tr>
                <tr>
                  <td colspan="8" class="factura_encabezado1"><br/></td>
                  <td class="text-center">DESCUENTO</td>
                  <td class="factura_td_numeros"><span t-esc="o.total_discount" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></td>
                </tr>
                <tr>
                  <td colspan="8" class="factura_encabezado1">TOTAL A PAGAR EN LETRAS<br/><t t-esc="o.monto_letras(o.get_total_invoice())"/></td>
                  <td class="text-center">TOTAL</td>
                  <td class="factura_td_numeros"><span t-esc="o.get_total_invoice()" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/></td>
                </tr>
              </tfoot>
            </table>
          </t>
        </div>
        <div class="footer">
            <link rel="stylesheet" href="/britania/static/src/css/report.css"/>
