<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!--Wizard Productos Triumph-->
    <record id="view_import_products_tri_wizard" model="ir.ui.view">
        <field name="name">britania.products.tri.wizard</field>
        <field name="model">britania.products.triumph.wizard</field>
        <field name="arch" type="xml">
            <form string="Cargar Productos Triumph">
                <div>
                    <p>
                        Este formulario le ayudara a cargar productos.
                    </p>
                </div>
                <group>
                  <field name="archivo" filename="name"/>
                </group>
                <footer>
                    <button string="Cargar Catalogos" name="cargar_catalogo_excel" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
         </field>
    </record>

    <record id="action_products_tri_wizard" model="ir.actions.act_window">
        <field name="name">Carga masiva de productos Triumph</field>
        <field name="res_model">britania.products.triumph.wizard</field>

        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_import_products_tri_wizard"/>
        <field name="target">new</field>
        <field name="context"></field>
    </record>

    <menuitem
        id="menu_products_tri_wizard" 
        name="Carga Productos Triumph" 
        action="action_products_tri_wizard"
        parent="britania.menu_tri_product_menu_list" 
        groups="base.group_user"/>
</data>
</odoo>