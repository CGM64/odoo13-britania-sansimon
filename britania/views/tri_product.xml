<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <menuitem id="menu_tri_product_menu_list"
            name="Productos Triumph"
            parent="stock.menu_stock_inventory_control"
            groups="base.group_user"/>

    <!--Menu de Productos Triumph-->
    
    <record id="product_tri_action" model="ir.actions.act_window">
      <field name="name">Productos Triumph</field>
      <field name="res_model">tri.product</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              Crea productos
          </p>
      </field>
    </record>

    <record id="tri_product_form" model="ir.ui.view">
      <field name="name">tri.product.form</field>
      <field name="model">tri.product</field>
      <field name="arch" type="xml">
        <form string="Productos Triumph" class="o_expense_form">
          <header>
            <button type="object" name="create_product" string="Crear producto" attrs="{'invisible':[('is_created', '!=', False)]}"/>
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Ejemplo: Abrazadera" />
              </h1>
            </div>
            <div class="container">
                <div class="row">
                  <div class="col-sm">
                    <group name="first" col="2">
                      <field name="default_code" class="oe_inline"/>
                      <field name="group" class="oe_inline"/>
                      <field name="standard_price" class="oe_inline"/>
                      <field name="is_created" invisible="1" class="oe_inline"/>
                      <field name="product_template" class="oe_inline" readonly="1"/>
                    </group>
                  </div>
                  <div class="col-sm">
                    <group name="second" col="2">
                      <field name="price_mar" readonly="1" class="oe_inline"/>
                      <field name="price_aer" readonly="1" class="oe_inline"/>
                      <field name="price_cour" readonly="1" class="oe_inline"/>
                    </group>
                  </div>
                </div>
              </div>
          </sheet>
          <div class="oe_chatter">
              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
              <field name="activity_ids" widget="mail_activity"/>
              <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record id="rounding_search_view" model="ir.ui.view">
        <field name="name">tri.product.search</field>
        <field name="model">tri.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="default_code"/>
            </search>
        </field>
    </record>

    <record id="tri_product_tree" model="ir.ui.view">
        <field name="name">tri.product.tree</field>
        <field name="model">tri.product</field>
        <field name="arch" type="xml">
              <tree string="Productos Triumph" import="0">
                  <field name="name"/>
                  <field name="default_code"/>
                  <field name="group"/>
                  <field name="standard_price"/>
                  <field name="price_mar" readonly="1"/>
                  <field name="price_aer" readonly="1"/>
                  <field name="price_cour" readonly="1"/>
              </tree>
        </field>
    </record>

    <menuitem id="menu_tag_product_tri"
                name="Productos Triumph"
                action="product_tri_action"
                parent="britania.menu_tri_product_menu_list"
                groups="base.group_user"/>

    <!--Menu de grupo producto-->
    <record id="tri_group_view" model="ir.ui.view">
        <field name="name">tri.product.tree</field>
        <field name="model">tri.product.group</field>
        <field name="arch" type="xml">
              <tree string="Grupos Triumph" editable="bottom">
                  <field name="name"/>
                  <field name="group_uti"/>
                  <field name="product_category"/>
              </tree>
        </field>
    </record>

    <record id="tri_group_action" model="ir.actions.act_window">
        <field name="name">Grupos Triumph</field>
        <field name="res_model">tri.product.group</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  Crea grupos para los productos Triumph
              </p>
        </field>
  </record>

  <menuitem id="menu_tri_group_menu_list"
                  name="Grupos de producto"
                  action="tri_group_action"
                  parent="britania.menu_tri_product_menu_list"
                  groups="base.group_user"/>
</data>
</odoo>