<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="fleet_vehicle_search" model="ir.ui.view">
      <field name="name">fleet.vehicle.search.view</field>
      <field name="model">fleet.vehicle</field>
      <field name="inherit_id" ref="fleet.fleet_vehicle_view_search" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="replace">
          <field string="Vehicle" name="name"
            filter_domain="['|','|', ('name', 'ilike', self), ('license_plate', 'ilike', self),('pedido', 'ilike', self)]" />
        </xpath>
      </field>
    </record>

    <record id="fleet_vehicle_form" model="ir.ui.view">
      <field name="name">fleet.vehicle.form</field>
      <field name="model">fleet.vehicle</field>
      <field name="inherit_id" ref="fleet.fleet_vehicle_view_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='model_id']" position="attributes">
          <attribute name="options">{'no_create_edit': True, 'no_create':True, 'no_open':True}</attribute>
        </xpath>
      </field>
    </record>

    <record id="fleet_vehicle_model_search" model="ir.ui.view">
      <field name="name">fleet.vehicle.model.search</field>
      <field name="model">fleet.vehicle.model</field>
      <field name="inherit_id" ref="fleet.fleet_vehicle_model_view_search" />
      <field name="arch" type="xml">
        <xpath expr="//search" position="inside">
          <field string="Modelo" name="name" filter_domain="[('name', 'ilike', self)]" />
        </xpath>
      </field>
    </record>
    <record model="ir.actions.server" id="action_actualizar_ficha_vehiculo">
      <field name="name">Actualizar ficha</field>
      <field name="model_id" ref="fleet.model_fleet_vehicle" />
      <field name="state">code</field>
      <field name="code">
records = env["fleet.vehicle"]
records.actualizar_ficha_vehiculos()
      </field>
    </record>

    <menuitem id="actualizar_ficha_vehiculo" name="Actualizar ficha vehiculo"
      parent="fleet.fleet_configuration" action="action_actualizar_ficha_vehiculo" />
  </data>
</odoo>