<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Reporte reparacion-->
    <template id="custom_report" inherit_id="repair.report_repairorder" name="custom_report">
    <xpath expr="//thead" position="replace">
        <thead>
            <tr>
                <th>Descripción</th>
                <th class="text-right">Cantidad</th>
                <t t-if="o.invoice_method != 'none'">
                    <th class="text-right">Precio Unit.</th>
                    <th class="text-right">Precio</th>
                </t>
            </tr>
        </thead>
    </xpath>
    
    <xpath expr="//h2" position="replace">
        <h2>
            <span t-if="o.state != 'draft'">Orden de </span>
            <span t-if="o.state == 'draft'">Presupuesto de </span>
            <span t-field="o.tipo_orden"/>
            <span> nº:</span>
            <span t-field="o.name"/>
        </h2>
    </xpath>

    <xpath expr="//div[@id='informations']" position="replace">
        <div id="informations" class="row mt32 mb32">
            <div t-if="o.product_id.name" class="col-3 bm-2">
                <strong>Product to Repair:</strong>
                <p t-field="o.product_id.name" class="m-0"/>
            </div>
            <div class="col-3 bm-2" groups="stock.group_production_lot">
                <strong>Lot/Serial Number:</strong>
                <t t-if="o.lot_id">
                    <span t-field="o.lot_id.name"/>
                </t>
            </div>
            <div t-if="o.guarantee_limit" class="col-3 bm-2">
                <strong>Warranty:</strong>
                <p t-field="o.guarantee_limit" class="m-0"/>
            </div>
            <div class="col-3 bm-2">
                <strong>Fecha:</strong>
                <p t-field="o.create_date" t-options="{'widget': 'date'}" class="m-0"/>
            </div>
        </div>
    </xpath>

    <xpath expr="//thead" position="replace">
        <thead>
            <t t-set="display_discount_p" t-value="any(l.discount for l in o.operations)" />
            <t t-set="display_discount_o" t-value="any(l.discount for l in o.fees_lines)" />
            <tr>
                <th>DESCRIPCIÓN</th>
                <th class="text-right">CANTIDAD</th>
                <t t-if="o.invoice_method != 'none'">
                    <th class="text-right">PRECIO UNIT.</th>
                    <t t-if="display_discount_p or display_discount_o">
                        <th class="text-right">DESC.</th>
                    </t>
                    <th class="text-right">PRECIO</th>
                </t>
            </tr>
        </thead>
    </xpath>

    <xpath expr="//t[@t-if='o.operations']" position="replace">
        <t t-if="o.operations">
            <t t-set="display_discount_p" t-value="any(l.discount for l in o.operations)" />
            <t t-set="display_discount_o" t-value="any(l.discount for l in o.fees_lines)" />
            <tr class="bg-200 o_line_section"><td colspan="5"><strong>Repuestos</strong></td></tr>
            <tr t-foreach="o.operations" t-as="line">
                <td>
                    <p t-if="line.type == 'add'"><i>(Add)</i> <span t-field="line.name" /></p>
                    <p t-if="line.type == 'remove'">(<i>Remove</i>) <span t-field="line.name"/></p>
                </td>
                <td class="text-right">
                    <span t-field="line.product_uom_qty"/>
                    <span groups="uom.group_uom" t-field="line.product_uom.name"/>
                </td>
                <t t-if="(line.repair_id.invoice_method != 'none')">
                    <td class="text-right">
                        <span t-field="line.price_unit"/>
                    </td>
                    <t t-if="display_discount_p or display_discount_o">
                        <td class="text-right">
                            <span t-field="line.discount" t-options='{"precision": 2}'/>%
                        </td>
                    </t>
                    <td class="text-right o_price_total">
                        <span t-field="line.amount_total" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                   </td>
                </t>
            </tr>
            <tr>
                <t t-set="total_ops" t-value="sum(l.amount_total for l in o.operations)"/>
                <t t-if="display_discount_p">
                    <td colspan="4" class="text-right">Subtotal repuestos: </td>
                    <td class="text-right">
                        <t t-esc="total_ops" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                    </td>
                </t>
                <t t-if="not display_discount_p">
                    <td colspan="3" class="text-right">Subtotal repuestos: </td>
                    <td class="text-right">
                        <t t-esc="total_ops" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                    </td>
                </t>
            </tr>
        </t>
    </xpath>

    <xpath expr="//t[@t-if='o.fees_lines']" position="replace">
        <t t-if="o.fees_lines">
            <t t-set="display_discount_p" t-value="any(l.discount for l in o.operations)" />
            <t t-set="display_discount_o" t-value="any(l.discount for l in o.fees_lines)" />
            <tr class="bg-200 o_line_section"><td colspan="5"><strong>Servicios</strong></td></tr>
            <tr t-foreach="o.fees_lines" t-as="fees">
                <t t-if="display_discount_p or display_discount_o">
                    <td colspan="4">
                        <span t-field="fees.name"/>
                    </td>
                </t>
                <t t-if="not display_discount_p or display_discount_o">
                    <td colspan="3">
                        <span t-field="fees.name"/>
                    </td>
                </t>
                <t t-if="(fees.repair_id.invoice_method != 'none')">
                    <t t-if="display_discount_o">
                    <td class="text-right">
                        <span t-field="fees.discount" t-options='{"precision": 2}'/>%
                    </td>
                    </t>
                    <td class="text-right o_price_total">
                        <span t-field="fees.amount_total"
                            t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                   </td>
                </t>
            </tr>
            <tr>
                <t t-set="total_fees" t-value="sum(l.amount_total for l in o.fees_lines)"/>
                <t t-if="display_discount_p or display_discount_o">
                    <td colspan="4" class="text-right">Subtotal servicios: </td>
                    <td class="text-right">
                        <t t-esc="total_fees" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                    </td>
                </t>
                <t t-if="not display_discount_p or display_discount_o">
                    <td colspan="3" class="text-right">Subtotal servicios: </td>
                    <td class="text-right">
                        <t t-esc="total_fees" t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                    </td>
                </t>
            </tr>
        </t>
    </xpath>
    
    <xpath expr="//div[hasclass('col-4')]" position="replace">
            <div class="col-4">
                <table class="table table-sm">
                    <t t-if="o.invoice_method !='none'">
                        <tr class="border-black o_total">
                            <td><strong>Total</strong></td>
                            <td class="text-right o_price_total">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
    </xpath>
    </template>

    <!-- Reporte pedido-->
    <template id="custom_report_sale" inherit_id="sale.report_saleorder_document" name="custom_report_sale">

        <xpath expr="//th[@name='th_taxes']" position="replace">
            <th name="th_taxes" class="text-right">Total</th>
        </xpath>

        <xpath expr="//th[@name='th_subtotal']" position="replace">
        </xpath>

        <xpath expr="//td[@name='td_taxes']" position="replace">
        </xpath>

        <xpath expr="//tr[hasclass('o_subtotal')]" position="replace">
            <tr t-if="doc.total_discount">
                <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                <td name="td_amount_untaxed" class="text-right">
                    <span t-field="doc.amount_total_undiscounted"/>
                </td>
            </tr>
        </xpath>

        <xpath expr="//t[@t-foreach='doc.amount_by_group']" position="replace">
            <tr t-if="doc.total_discount">
                <td><strong>Descuento</strong></td>
                <td name="td_tax_total" class="text-right">
                    <span t-field="doc.total_discount"/>
                </td>
            </tr>
        </xpath>

        <xpath expr="//td[@t-if='display_discount']" position="replace">
            <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                <span t-field="line.discount" t-options='{"widget": "float", "precision": 0}'/>
            </td>
        </xpath>
    </template>
</odoo>