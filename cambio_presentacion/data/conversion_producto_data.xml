<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <!-- Creación de la ubicacion -->
   <record id="stock_location_vendors_desglose" model="stock.location">
      <field name="name">DESGL-SUPP</field>
      <field name="location_id" search="[('name','=','Partner Locations')]"/>
      <field name="usage">supplier</field>
   </record>

   <record id="stock_location_customers_desglose" model="stock.location">
      <field name="name">DESGL-CUST</field>
      <field name="location_id" search="[('name','=','Partner Locations')]"/>
      <field name="usage">customer</field>
   </record>

   <!-- Creación del cliente  -->
   <record id="res_partner_desglose" model="res.partner">
      <field name="name">Desglose</field>
   </record>

   <!-- Creación de la bodega -->
   <record id="stock_warehouse_desglose" model="stock.warehouse">
      <field name="name">DESGL</field>
      <field name="code">DESGL</field>
      <field name="partner_id" ref="cambio_presentacion.res_partner_desglose"/>
   </record>

   <!-- Creación de las Secuencias -->
   <record id="ir_sequence_desglose_recepcion" model="ir.sequence">
      <field name="name">Desglose Recepcion</field>
      <field name="implementation">standard</field>
      <field name="active">True</field>
      <field name="prefix">DESG-IN/%(range_year)s/</field>
      <field name="use_date_range">True</field>
      <field name="padding">5</field>
      <field name="number_increment">1</field>
   </record>

   <record id="ir_sequence_desglose_salida" model="ir.sequence">
      <field name="name">Desglose Salida</field>
      <field name="implementation">standard</field>
      <field name="active">True</field>
      <field name="prefix">DESG-OUT/%(range_year)s/</field>
      <field name="use_date_range">True</field>
      <field name="padding">5</field>
      <field name="number_increment">1</field>
   </record>

   <!-- Creación de Tipo de operacion -->
   <record id="stock_picking_type_desglose_Recepcion" model="stock.picking.type">
      <field name="name">Desglose Recepcion</field>
      <field name="sequence_id" ref="cambio_presentacion.ir_sequence_desglose_recepcion"/>
      <field name="sequence_code">DES-IN</field>
      <field name="warehouse_id" ref="cambio_presentacion.stock_warehouse_desglose"/>
      <field name="code">incoming</field>
      <field name="show_operations">True</field>
      <field name="default_location_dest_id" search="[('complete_name','=','DESGL/Stock')]"/>
      <field name="default_location_src_id" ref="cambio_presentacion.stock_location_vendors_desglose"/>
   </record>

   <record id="stock_picking_type_desglose_Salida" model="stock.picking.type">
      <field name="name">Desglose Salida</field>
      <field name="sequence_id" ref="cambio_presentacion.ir_sequence_desglose_salida"/>
      <field name="sequence_code">DES-OUT</field>
      <field name="warehouse_id" ref="cambio_presentacion.stock_warehouse_desglose"/>
      <field name="code">outgoing</field>
      <field name="show_operations">True</field>
      <field name="default_location_dest_id" ref="cambio_presentacion.stock_location_customers_desglose"/>
      <field name="default_location_src_id" search="[('complete_name','=','DESGL/Stock')]"/>
   </record>


   <record id="res_partner_desglose" model="res.partner">
      <field name="property_stock_customer" ref="cambio_presentacion.stock_location_customers_desglose"/>
      <field name="property_stock_supplier" ref="cambio_presentacion.stock_location_vendors_desglose"/>
   </record>
</odoo>
