<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Acción-->
    <record id="conversion_producto_menu_item_action" model="ir.actions.act_window">
        <field name="name">Conversion</field>
        <field name="res_model">conversion.producto</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
        Crea una nueva conversión.
            </p>
        </field>
    </record>
    <menuitem name="Cambio de Presentacion" id="menu_covnersion_producto_submit" action="conversion_producto_menu_item_action" parent="stock.menu_stock_warehouse_mgmt" />
    <!-- VISTA DE ARBOL INICIAL DE LA CONVERSION -->
    <record id="conversion_producto_view_tree" model="ir.ui.view">
        <field name="name">stock.move.raw.tree</field>
        <field name="model">conversion.producto</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="product_id" options="{'no_create': True}" required="1"/>
                <field name="stock_location_id" options="{'no_create': True}" required="1"/>
                <field name="factor_id" options="{'no_create': True}" required="1"/>
                <field name="state"/>
                <field name="date" options="{'no_create': True}" required="1"/>
                <field name="amount" />
                <!-- <field name="amount_total" /> -->
            </tree>
        </field>
    </record>
    <!-- VISTA FORM INICIAL DE LA CONVERSION -->
    <record id="product_conversion_view_form" model="ir.ui.view">
        <field name="name">product.conversion.view.form</field>
        <field name="model">conversion.producto</field>
        <field name="arch" type="xml">
            <form string="Conversion" class="o_expense_form">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,adjustment,cancel"/>
                    <button name="button_approved" string="Convertir" type="object" attrs="{'invisible':[('state','!=','draft')]}"/>
                    <button name="action_generar_movimientos" string="Generar Movimientos" type="object" attrs="{'invisible':[('state','!=','posted')]}"/>
                    <button name="button_draft" string="Restablecer a borrador" type="object" attrs="{'invisible':[('state','=','draft')]}"/>
                    <button name="button_cancel" string="Cancelar" type="object" attrs="{'invisible':[('state','!=','posted')]}"/>
                    <button name="download_report" type="object" string="Descargar Reporte" class="oe_highlight" icon="fa-download" attrs="{'invisible':[('state','!=','adjustment')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object" class="oe_stat_button" icon="fa-truck">
                            <field name="total_pickings" widget='statinfo' string="Pickings"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" options ="{'no_open':true, 'no_quick_create':true,'no_create_edit':true,'no_create':true}"/>
                            <field name="warehouse_id" options ="{'no_open':true, 'no_quick_create':true,'no_create_edit':true,'no_create':true}"/>
                            <field name="stock_location_id" invisible="1" options ="{'no_open':true, 'no_quick_create':true,'no_create_edit':true,'no_create':true}" />
                            <field name="factor_id"/>
                            <field name="standard_price"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="amount" />
                            <field name="unidades_requeridas" />
                            <field name="total_standard_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Puede convertirse en">
                            <field name="conversion_producto_ids" context="{'tree_view_ref': 'cambio_presentacion.conversion_producto_detalle_view_tree'}" />
                            <group name="detalle_group" col="6">
                                <group colspan="4">

                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="detalle_total">
                                    <div class="oe_inline o_td_label">
                                        <label for="amount_total" />
                                    </div>
                                    <field name="amount_total" nolabel="1" class="" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="conversion_producto_detalle_view_tree" model="ir.ui.view">
        <field name="name">conversion.producto.detalle.view.tree</field>
        <field name="model">conversion.producto.detalle</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="conversion_producto_line_id" invisible="1"/>
                <field name="product_id"/>
                <field name="factor_id"/>
                <field name="standard_price"/>
                <field name="factor_amount"/>
                <field name="amount"/>
                <field name="unit_amount"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="stock_picking_window">
        <field name="name">stock picking</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>