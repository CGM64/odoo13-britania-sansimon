<odoo>
    <data>
        <template id="corte_caja_report_pdf">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">


                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                One of three columns
                                </div>
                                <div class="col-sm">
                One of three columns
                                </div>
                                <div class="col-sm">
                One of three columns
                                </div>
                            </div>
                        </div>

                        <div clas="page" t-foreach="o.corte_caja_pdf()" t-as="dato">
                            <div class="diario">
                                <strong>
                                    <p t-esc="dato['diario']" />
                                </strong>
                            </div>
                            <div class="">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Pago</th>
                                            <th scope="col">Circular</th>
                                            <th scope="col">Cliente</th>
                                            <th scope="col">Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="dato['factura']" t-as="fac">
                                            <tr>
                                                <td>
                                                    <p t-esc="fac['account_payment_line_id']" />
                                                </td>
                                                <td>
                                                    <p t-esc="fac['circular']" />
                                                </td>
                                                <td>
                                                    <p t-esc="fac['partner_id']" />
                                                </td>
                                                <td>
                                                    <p t-esc="fac['amount']" />
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3">Subtotal</td>
                                            <td>
                                                <p t-esc="dato['subtotal']" />
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="total">
                                <p t-esc="dato['total']" />
                            </div>
                        </div>


                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
