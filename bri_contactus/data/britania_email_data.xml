<?xml version="1.0"?>
<odoo>
    <data>
        <record id="confirmate_data_user_email" model="mail.template">
            <field name="name">Confirmar Datos de oportunidad</field>
            <field name="model_id" ref="crm.model_crm_lead"></field>
            <field name="auto_delete" eval="False"/>
            <!--field name="lang">${object.lang}</field-->
            <field name="subject">Confirmación de datos para la cotización</field>
            <field name="email_to">${ object.email_from | safe }</field>
            <field name="email_from">"${ object.company_id.name | safe }" &lt; ${ (object.company_id.email or user.email) | safe }</field>
            <!--field name="email_to">${ object.email_from | safe }</field-->
            <field name="body_html" type="html">
                <table>
                    <tr>
                        <td align="center">
                            <table>
                                <tbody>
                                    <tr>
                                        <td align="center">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="middle">
                                                        <span style="font-size: 20px; font-weight: bold;">
                                                            ${ object.company_id.name}
                                                        </span>
                                                    </td>
                                                    <td valign="middle" align="right">
                                                        <img src="/logo?company=${ object.company_id.id }" alt="${ object.company_id.name }" style="padding: 0px; margin: 0px; height: auto; width: 80px;" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2" style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="center">
                                            <table>
                                                <tr>
                                                    <td valign="top">
                                                        <div>
                                                            <p>
                                                                Hola, ${ object.contact_name}
                                                                <br />
                                                                <br />
                                                                Usted está recibiendo este mensaje por la cotización del producto: ${ object.modelo.display_name }
                                                                <br />
                                                                Muy pronto se le enviara la cotización.
                                                                <br />
                                                                <br />
                                                            </p>
                                                            <a href="${ object.token_url }" style="background: #cd192d; border: .125rem solid #cd192d; color: #fff; padding: 0 1.25rem; display: inline-block; text-decoration: none; min-height: 3.25rem; height: 3.25rem; line-height: 3.25rem;">
                                                                Solicitar cotización
                                                            </a>
                                                            <p>
                                                                <br />
                                                                <br />
                                                                Gracias,
                                                                <br />
                                                                <b>${ object.company_id.name}</b>
                                                            </p>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" />
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
        </record>

        <!--record id="mail_outgoing_contactus" model="ir.mail_server" forcecreate="0">
            <field name="name">correo.contacto</field>
            <field name="smtp_host">smtp.gmail.com</field>
            <field name="smtp_port" eval="465"></field>
            <field name="sequence" eval="11"></field>
        </record-->

        <template id="mail_template_cotizacion">

            <div style="display: block;">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: white; padding: 0; border-collapse:separate;">
                    <tr>
                        <td valign="middle">
                            <h4 class="font-italic">
                                Hola,
                                <t t-esc="contact_name" />
                            </h4>
                        </td>
                        <td valign="middle" align="right">
                            <img t-att-src="'%s/logo.png?company=%s' % (base_url,company.id or 0)" style="padding: 0px; margin: 0px; height: 48px;" t-att-alt="'%s' % company.name" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:center;">
                            <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:4px 0px 32px 0px;" />
                        </td>
                    </tr>
                </table>

                <p>
                    <br />
                    Hemos recibido su solicitud.
                    <br />
                    Pronto alguien se comunicara con usted para los detalles de la cotizacion del producto:
                    <t t-esc="product_name" />
                    <br />
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam hendrerit fermentum magna.
                    <br />
                    Vivamus commodo aliquam massa aliquet ultricies.
                    <br />
                </p>
                <br />
                <a t-att-href="token_url" style="background: rgb(60, 179, 113); border-radius: 5px; padding: 10px; text-decoration: none; color: white;">
                    Aceptar la cotización
                </a>
                <p>
                    <br />
                    Gracias,
                    <br />
                </p>
                <p class="text-uppercase font-weight-bolder">
                    <b>
                        <t t-esc="company.name" />
                    </b>
                </p>
            </div>
        </template>

        <!-- CAMBIO DE COLOR BOTON ACEPTAR Y FIRMAR PRESUPUESTO -->
        <template id="change_color_mail_notification_paynow" inherit_id="mail.mail_notification_paynow">
            <xpath expr="//a[@t-att-href='access_url']" position="attributes">
                <attribute name="style">background: #cd192d; border: .125rem solid #cd192d; color: #fff; padding: 0 1.25rem; display: inline-block; text-decoration: none; min-height: 3.25rem; height: 3.25rem; line-height: 3.25rem;</attribute>
            </xpath>
        </template>
    </data>
</odoo>