<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Menu de Medios Cliente-->
        <record id="crm_medio_contacto_view" model="ir.ui.view">
            <field name="name">crm.contacto.view.form</field>
            <field name="model">crm.medio.contacto</field>
            <field name="arch" type="xml">
                <form string="Medios de contacto" class="o_expense_form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="borrador" invisible="1"/>
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <h1><field name="name" placeholder="Ejemplo WhatsApp"/></h1>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="crm_medio_action" model="ir.actions.act_window">
            <field name="name">Medios de contacto</field>
            <field name="res_model">crm.medio.contacto</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea medios de contacto
                </p>
            </field>
        </record>

    <menuitem id="menu_crm_medio_menu_list"
                name="Medio de contacto"
                action="crm_medio_action"
                parent="crm.crm_menu_config"
                groups="base.group_user"/>
    </data>
</odoo>