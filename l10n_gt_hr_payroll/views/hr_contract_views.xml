<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Contract View -->
    <record id="hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="after">
                <page string="Terminos del Contrato" name="term_contract">
                    <group name="term_datos">
                        <group>
                            <field name="forma_pago"/>
                            <field name="aplica_igss"/>
                            <field name="tipo_contrato"/>
                            <field name="temporalidad_contrato"/>
                            <field name="condicion_laboral"/>
                            <field name="jornada_trabajo"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//label[@for='wage']" position="before">
                <field name="bono_especial"/>
                <field name="bono_decreto"/>
                <field name="isr"/>
                <field name="bantrab"/>
                <field name="juridico"/>
            </xpath>
            <xpath expr="//field[@name='hr_responsible_id']" position="after">
                <field name="fecha_reinicio_labores"/>
                <field name="motivo_baja"/>
            </xpath>
        </field>
    </record>
</odoo>
