<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Nivel Educativo-->
    <record id="hr_employee_nivel_educativo_form" model="ir.ui.view">
        <field name="name">hr.employee.nivel.educativo.form</field>
        <field name="model">hr.employee.nivel.educativo</field>
        <field name="arch" type="xml">
            <form string="Nivel Educativo">
            <sheet>
                <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                <group name="category_details" col="2">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active" widget="boolean_toggle"/>
                </group>
            </sheet>
            </form>
        </field>
    </record>

    <record id="hr_employee_nivel_educativo_tree" model="ir.ui.view">
        <field name="name">hr.employee.nivel.educativo.tree</field>
        <field name="model">hr.employee.nivel.educativo</field>
        <field name="arch" type="xml">
            <tree string="Nivel Educativo">
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_nivel_educativo" model="ir.actions.act_window">
        <field name="name">Nivel Educativo</field>
        <field name="res_model">hr.employee.nivel.educativo</field>
        <field name="view_id" ref="hr_employee_nivel_educativo_tree"/>
    </record>

    <menuitem
    id="hr_employee_nivel_educativo_menu"
    action="action_hr_employee_nivel_educativo"
    parent="l10n_gt_hr_payroll.catalogos_ministerio_trabajo_menu"
    sequence="40"/>
</odoo>
