<odoo>
  <data>
  <!--
    <report
      string="Ficha Empleado"
      id="l10n_gt_hr_payroll_ficha_empleado_report"
      model="hr.employee"
      report_type="qweb-pdf"
      name="l10n_gt_hr_payroll.report_ficha_empleado"
