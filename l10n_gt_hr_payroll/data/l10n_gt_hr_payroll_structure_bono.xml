<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="hr_payroll_salary_structure_type_gt_emp_bono" model="hr.payroll.structure.type">
            <field name="name">Planilla de Bonos</field>
            <field name="country_id" ref="base.gt" />
            <field name="default_schedule_pay">monthly</field>
        </record>

        <record id="hr_payroll_salary_structure_gt_bonos_emp" model="hr.payroll.structure">
            <field name="name">Planilla de Bonos</field>
            <field name="country_id" ref="base.gt" />
            <field name="type_id" ref="hr_payroll_salary_structure_type_gt_emp_bono" />
            <field name="schedule_pay">monthly</field>
            <field name="journal_id" ref="hr_payroll_gt_journal_nomina" />
        </record>

        <record id="hr_salary_rule_bono_bono_especial" model="hr.salary.rule">
            <field name="code">BONOESPEADI</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (inputs.BONOESPE and inputs.BONOESPE.amount)</field>
            <field name="category_id" ref="hr_payroll.ALW" />
            <field name="name">Bono Especial</field>
            <field name="sequence" eval="52" />
            <field name="note">Bono Especial</field>
            <field name="struct_id" ref="hr_payroll_salary_structure_gt_bonos_emp" />
            <field name="account_debit" search="[('code', '=', '1-1-04-05-001'),]" />
        </record>

        <record id="hr_salary_rule_anticipo_bono" model="hr.salary.rule">
            <field name="code">BONO</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.BONOPRO and inputs.BONOPRO.amount</field>
            <field name="category_id" ref="hr_payroll.ALW" />
            <field name="name">Bono</field>
            <field name="sequence" eval="57" />
            <field name="note">Bono que se dan los primeros 5 dias de cada mes</field>
            <field name="struct_id" ref="hr_payroll_salary_structure_gt_bonos_emp" />
            <field name="account_debit" search="[('code', '=', '1-1-04-05-001'),]" />
        </record>

        <record id="hr_salary_rule_anticipo_bono_comision" model="hr.salary.rule">
            <field name="code">COMISION</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.COMISION and inputs.COMISION.amount</field>
            <field name="category_id" ref="hr_payroll.ALW" />
            <field name="name">Comision</field>
            <field name="sequence" eval="58" />
            <field name="note">Bono de comision</field>
            <field name="struct_id" ref="hr_payroll_salary_structure_gt_bonos_emp" />
            <field name="account_debit" search="[('code', '=', '1-1-04-05-001'),]" />
        </record>

        <record id="hr_salary_rule_liquido_recibir_bono" model="hr.salary.rule">
            <field name="code">LIQRE</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = categories.ALW</field>
            <field name="category_id" ref="hr_payroll.NET" />
            <field name="name">Liquido a Recibir</field>
            <field name="sequence" eval="65" />
            <field name="note">Liquido a Recibir</field>
            <field name="struct_id" ref="hr_payroll_salary_structure_gt_bonos_emp" />
            <field name="account_credit" search="[('code', '=', '2-1-03-01-001'),]" />
        </record>
    </data>

</odoo>