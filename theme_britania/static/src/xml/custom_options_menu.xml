<templates id="template" xml:space="preserve">
    <t t-extend="wysiwyg.widgets.link">
        <t t-jquery=".form-group.row.o_url_input:not(d-none)" t-operation="after">
            <div class="form-group form-check">
                <input t-att-checked="widget.data.desplegable ? 'checked' : undefined" type="checkbox" name="desplegable" class="form-check-input" id="desplegableInput" />
                <label class="form-check-label" for="desplegableInput">¿Menu desplegable?</label>
            </div>
            <!--div class="form-group form-check" t-att-style="widget.data.tipo_submenu ? 'display: block;' : 'display: none;'"-->
            <div class="form-group form-check">
                <input t-att-checked="widget.data.tipo_submenu ? 'checked' : undefined" type="checkbox" name="tipo_submenu" class="form-check-input" id="tiposubmenuInput" />
                <label class="form-check-label" for="tiposubmenuInput">¿Mega menu extendido.?</label>
            </div>
            <!--div class="form-group" disabled="widget.data.desplegable">
                <label class="my-1 mr-2" for="tipomenu">¿Tipo de sub menu?</label>
                <select class="custom-select my-1 mr-sm-2" name="tipo_submenu" id="tipomenu">
                        <t t-for="widget.data.tipo_submenu" t-as="type">
                            <option value="type.value"><t t-esc="type.name" /></option>
                        </t>
                </select>
            </div-->
        </t>
    </t>
</templates>