<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="britania_assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/theme_britania/static/src/scss/buttons.scss"/>
            <link rel="stylesheet" type="text/scss" href="/theme_britania/static/src/scss/cotizador.scss"/>
            <link rel="stylesheet" type="text/scss" href="/theme_britania/static/src/scss/header.scss"/>
            <link rel="stylesheet" type="text/scss" href="/theme_britania/static/src/scss/custom.scss"/>
            <link rel="stylesheet" type="text/scss" href="/theme_britania/static/src/scss/animate.scss"/>
        </xpath>
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/theme_britania/static/src/js/general/index.js" />
            <script type="text/javascript" src="/theme_britania/static/src/js/general/wow.js" />
            <script>
                let s = new WOW().init();
            </script>
        </xpath>
    </template>
    <template id="britania_assets_editor" inherit_id="website.assets_editor">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/theme_britania/static/src/js/editor/custom_options_menu.js" />
        </xpath>
    </template>
    <!-- CUSTOM COLORS -->
    <template id="bri_theme_custom_variables" inherit_id="web._assets_primary_variables">
        <xpath expr="//link" position="after">
            <link rel="stylesheet" type="text/scss" href="/theme_britania/static/src/scss/custom_colors.scss"></link>
        </xpath>
    </template>
</odoo>