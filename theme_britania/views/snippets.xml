        </xpath>
    </template>

    <template id="delete_default_copyright_footer" inherit_id="portal.frontend_layout">
        <xpath expr="//div[@id='wrapwrap']/footer/div[@class='o_footer_copyright']" position="replace">
            <div></div>
        </xpath>
    </template>

    <!-- =================================================================== -->

    <!-- ===================== SNIPPETS PROPIOS ===================== -->

    <template id="snippet_three_buttons_bar" name="Tres Botones en línea">
        <section class="snippet_three_buttons_bar w-100 bg-dark d-flex align-items-center">
            <div class="container text-center">
                <div class="row w-100">
                    <div class="col-12 col-md-4 py-3 btn-banner d-flex justify-content-center">
                        <a href="#" class="text-light text-decoration-none text-uppercase d-flex align-items-center">
                            <img src="https://images.triumphmotorcycles.co.uk/media-library/images/motorcycles/icon grid/icon-dealer.svg?la=es-MX" style="max-height: 30px; max-width: 30px;" />
                            <span class="ml-2">Buscador de Concesionarios</span>
                        </a>
                    </div>
                    <div class="col-12 col-md-4 py-3 btn-banner d-flex justify-content-center">
                        <a href="#" class="text-light text-decoration-none text-uppercase d-flex align-items-center">
                            <img src="https://images.triumphmotorcycles.co.uk/media-library/images/motorcycles/icon grid/icon-test-drive.svg?la=es-MX" style="max-height: 30px; max-width: 30px;" />
                            <span class="ml-2">RESERVA TU PRUEBA DE CONDUCCI&#211;N</span>
                        </a>
                    </div>
                    <div class="col-12 col-md-4 py-3 btn-banner d-flex justify-content-center">
                        <a href="#" class="text-light text-decoration-none text-uppercase d-flex align-items-center">
                            <img src="https://images.triumphmotorcycles.co.uk/media-library/images/motorcycles/icon grid/icon-offers.svg?la=es-MX" style="max-height: 30px; max-width: 30px;" />
                            <span class="ml-2">OFERTAS</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="snippet_two_col_cards" name="Cards en dos columnas">
        <section class="container mt-2">
            <div class="row">
                <div class="col-12 col-md-6 mt-3">
                    <div class="card">
                        <img src="https://images.triumphmotorcycles.co.uk/media-library/images/central%20marketing%20team/for%20the%20ride/experiences/spain%20adventure%20experience/home-spain-tae-card-1-770x770.jpg" alt="" class="car-img-top" />
                        <div class="card-body">
                            <h2>Spain Adventure Experience</h2>
                            <p>Experimenta todas las emociones de la conducción off-road </p>
                            <div class="s_btn pt16 pb16 fadeIn" data-name="Button">
                                <a href="#" class="btn btn-dark py-2">DESCUBRIR MÁS</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 mt-3">
                    <div class="card">
                        <img src="https://images.triumphmotorcycles.co.uk/media-library/images/home/hompage%20images/crosslinks/assen-2019-moto2-championship-hero-500x325-opt.jpg" alt="" class="car-img-top" />
                        <div class="card-body">
                            <h2>MOTO2™</h2>
                            <p>Triumph será el proveedor exclusivo de motores del Mundial de Moto2™.</p>
                            <div class="s_btn pt16 pb16 fadeIn" data-name="Button">
                                <a href="#" class="btn btn-dark py-2">DESCUBRIR MÁS</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-6 mt-3">
                    <div class="card">
                        <img src="https://images.triumphmotorcycles.co.uk/media-library/images/home/hompage%20images/crosslinks/te-1-725x512-opt.jpg" alt="" class="car-img-top" />
                        <div class="card-body">
                            <h2>PROJECT TRIUMPH TE-1</h2>
                            <p>Sentando las bases de la futura moto eléctrica británica.</p>
                            <div class="s_btn pt16 pb16 fadeIn" data-name="Button">
                                <a href="#" class="btn btn-dark py-2">DESCUBRIR MÁS</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="snippet_simple_card" name="Cards simples">
        <section class="card">
            <img src="https://images.triumphmotorcycles.co.uk/media-library/images/central%20marketing%20team/for%20the%20ride/experiences/spain%20adventure%20experience/home-spain-tae-card-1-770x770.jpg" alt="" class="car-img-top" />
            <div class="card-body">
                <h2>Spain Adventure Experience</h2>
                <p>Experimenta todas las emociones de la conducción off-road </p>
                <div class="s_btn pt16 pb16 fadeIn" data-name="Button">
                    <a href="#" class="btn btn-dark py-2">DESCUBRIR MÁS</a>
                </div>
            </div>
        </section>
    </template>

    <!-- =================================================================== -->

    <!-- ===================== AÑADIR SNIPPETS AL EDITOR ===================== -->

    <template id="place_into_bar_custom_snippets" inherit_id="website.snippets" name="Visualizacion en la barra">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_britania.snippet_three_buttons_bar" />
        </xpath>
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_britania.snippet_two_col_cards" />
        </xpath>
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_britania.snippet_simple_card" />
        </xpath>
    </template>

    <!-- =================================================================== -->

    <!-- ===================== AÑADIR OPCIONES A SNIPPETS ===================== -->

    <template id="options_s_britania" name="Opciones de prueba de snippets" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="after">
            <div data-selector=".snippet_three_buttons_bar">
                <we-collapse-area>
                    <we-toggler>
                        <i class="fa fa-fw fa-magic" />
                        Show extra info
                    </we-toggler>
                    <we-collapse>
                        <we-button data-select-class="opt_shadow">Shadow Images</we-button>
                        <we-button data-select-class="opt_grey_bg">Grey Bg</we-button>
                        <we-button data-select-class="">None</we-button>
                    </we-collapse>
                </we-collapse-area>
            </div>
        </xpath>
    </template>

    <template id="options_carousel_britania" name="Opciones de prueba de snippets" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="after">
            <div data-selector=".carousel-content">
                <we-collapse-area>
                    <we-toggler>
                        <i class="fa fa-fw fa-magic" />
                        Alineación del contenido
                    </we-toggler>
                    <we-collapse>
                        <we-button data-select-class="text-md-right">Derecha</we-button>
                        <we-button data-select-class="">Izquierda</we-button>
                    </we-collapse>
                </we-collapse-area>
            </div>
        </xpath>
    </template>

    <!-- =================================================================== -->
</odoo>