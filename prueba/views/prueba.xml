<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="form_prueba" name="template_name">
        <link rel="stylesheet" type="text/scss" href="/prueba/static/src/css/styles.scss"/>
        <script type="text/javascript" src="/prueba/static/src/js/javaScript.js"/>

        <record id="model_name_view_form" model="ir.ui.view">
            <form action="/website_form_prueba/" method="post" data-model_name="" class="s_website_form container mt-5">
                <div class="form-group row form-field o_website_form_required_custom mx-auto">
                    <label class="col-form-label col-sm-5" for="name">Nombre</label>
                    <div class="col-sm-7">
                        <input class="form-control o_website_form_input" type="text" name="name" id="nombre" placeholder="Nombre" t-att-value="request.params.get('name', '')" required="" />
                    </div>

                    <label class="col-form-label col-sm-5" for="age">Edad</label>
                    <div class="col-sm-7">
                        <input class="form-control o_website_form_input" type="number" name="age" id="edad" placeholder="Edad" t-att-value="request.params.get('age', '')" required="" />
                    </div>

                    <label class="col-form-label col-sm-5" for="email">Correo</label>
                    <div class="col-sm-7">
                        <input class="form-control o_website_form_input" type="email" name="email" id="correo" placeholder="Correo" t-att-value="request.params.get('email', '')" required="" />
                    </div>

                    <label class="col-form-label col-sm-5" for="address">Dirección</label>
                    <div class="col-sm-7">
                        <input class="form-control o_website_form_input" type="text" name="address" id="direccion" placeholder="Dirección" t-att-value="request.params.get('address', '')" required="" />
                    </div>
                </div>

                <div class="offset-lg-3 offset-md-4 col-md-8 col-lg-7 mx-auto">
                    <a href="#" role="button" class="btn btn-danger btn-lg o_website_form_send mt-3" onclick="enviar(event)">Guardar</a>
                    <span id="o_website_form_result"></span>
                </div>
                <sheet>
                    <group>
                        
                    </group>
                </sheet>
            </form>
        </record>
    </template>
</odoo>